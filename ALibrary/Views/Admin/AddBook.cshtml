@model ALibrary.Models.AddBook
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@using (Html.BeginForm("AddBook", "Admin", FormMethod.Post, new { enctype = "multipart/form-data" }))
{
    <div class="row">

        <div class="col-12 col-md-8">
            <div class="form-group">
                @Html.LabelFor(b => b.Name, "Имя")
                @Html.TextBoxFor(b => b.Name, new { @class = "form-control" })
                @Html.ValidationMessageFor(b => b.Name, "", new { @class = "text-danger" })
            </div>

            <div class="form-group">
                @Html.LabelFor(b => b.Year, "Год написания")
                @Html.TextBoxFor(b => b.Year, new { @type = "number", @class = "form-control" })
                @Html.ValidationMessageFor(b => b.Year, "", new { @class = "text-danger" })
            </div>

            <div class="form-group">
                @Html.LabelFor(b => b.NumberPages, "Количество страниц")
                @Html.TextBoxFor(b => b.NumberPages, new { @type = "number", @class = "form-control" })
                @Html.ValidationMessageFor(b => b.NumberPages, "", new { @class = "text-danger" })
            </div>

            <div class="form-group">
                @Html.LabelFor(b => b.Description, "Описание книги")
                @Html.TextAreaFor(b => b.Description, new { @class = "form-control" })
                @Html.ValidationMessageFor(b => b.Description, "", new { @class = "text-danger" })
            </div>

            <div class="form-group">
                @Html.LabelFor(b => b.TodayBestChoice, "Рекомендовать как выбор дня")
                @Html.TextBoxFor(b => b.TodayBestChoice, new { @type = "number", @class = "form-control" })
                @Html.ValidationMessageFor(b => b.TodayBestChoice, "", new { @class = "text-danger" })
            </div>

            <div class="form-group">
                @Html.LabelFor(b => b.Rating, "Рейтинг книги")
                @Html.TextBoxFor(b => b.Rating, new { @type = "number", @class = "form-control" })
                @Html.ValidationMessageFor(b => b.Rating, "", new { @class = "text-danger" })
            </div>

            <div class="form-group">
                @Html.LabelFor(b => b.ForAuthorize, "Для авторизованных пользователей")
                @Html.CheckBoxFor(b => b.ForAuthorize)
                @Html.ValidationMessageFor(b => b.ForAuthorize, "", new { @class = "text-danger" })
            </div>

            <div class="form-group">
                @Html.LabelFor(b => b.Author, "Автор книги")
                @Html.DropDownListFor(b => b.Author, ViewBag.Author as SelectList, new { @class = "form-control" })
                @Html.ValidationMessageFor(b => b.Author, "", new { @class = "text-danger" })
            </div>

            <div class="form-group">
                @Html.LabelFor(b => b.Category, "Категория книги")
                @Html.DropDownListFor(b => b.Category, ViewBag.Categories as SelectList, new { @class = "form-control" })
                @Html.ValidationMessageFor(b => b.Category, "", new { @class = "text-danger" })
            </div>

            <div class="form-group">
                <button type="submit" class="btn btn-primary">Добавить</button>
            </div>
        </div>

        <div class="col-6 col-md-4">
            <div class="form-group">
                @Html.LabelFor(b => b.BookFile, "Книга")
                @Html.TextBoxFor(b => b.BookFile, new { @type = "file", @class = "form-control" })
                @Html.ValidationMessageFor(b => b.BookFile, "", new { @class = "text-danger" })
            </div>

            <div class="form-group">
                <img class="img-thumbnail multi-image">
                @Html.LabelFor(b => b.BookCover, "Изображение")
                @Html.TextBoxFor(b => b.BookCover, new { @type = "file", @class = "form-control multi" })
                @Html.ValidationMessageFor(b => b.BookCover, "", new { @class = "text-danger" })
            </div>
        </div>
    </div>
}
