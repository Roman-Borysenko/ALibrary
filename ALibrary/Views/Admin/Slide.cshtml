@model ALibrary.Models.SlideAdminViewModel
@{
    Layout = "~/Views/Shared/_Layout.cshtml";

    string method = "AddSlide";
    if (ViewBag.IsEditPage != null && ViewBag.IsEditPage == true)
    {
        method = "EditSlide";
    }
}

@if (ViewBag.IsEditPage != null && ViewBag.IsEditPage == true)
{
    <h2>Редактировать слайд</h2>
}
else
{
    <h2>Добавить слайд</h2>
}

@using (Html.BeginForm(method, "Admin", FormMethod.Post, new { enctype = "multipart/form-data" }))
{
    <div class="row">

        <div class="col-12 col-md-8">
            @if (ViewBag.IsEditPage != null && ViewBag.IsEditPage == true)
            {
                @Html.TextBoxFor(b => b.Id, new { @type = "hidden" })
            }

            <div class="form-group">
                @Html.LabelFor(b => b.Title, "Заголовок слайда")
                @Html.TextBoxFor(b => b.Title, new { @class = "form-control" })
                @Html.ValidationMessageFor(b => b.Title, "", new { @class = "text-danger" })
            </div>

            <div class="form-group">
                @Html.LabelFor(b => b.Signature, "Краткое описание слайда")
                @Html.TextBoxFor(b => b.Signature, new { @class = "form-control" })
                @Html.ValidationMessageFor(b => b.Signature, "", new { @class = "text-danger" })
            </div>

            <div class="form-group">
                @Html.LabelFor(b => b.Description, "Описание слайда")
                @Html.TextAreaFor(b => b.Description, new { @class = "form-control" })
                @Html.ValidationMessageFor(b => b.Description, "", new { @class = "text-danger" })
            </div>

            <div class="form-group">
                @Html.LabelFor(b => b.LinkText, "Текст ссылки")
                @Html.TextBoxFor(b => b.LinkText, new { @class = "form-control" })
                @Html.ValidationMessageFor(b => b.LinkText, "", new { @class = "text-danger" })
            </div>

            <div class="form-group">
                @Html.LabelFor(b => b.Link, "Ссылка")
                @Html.TextBoxFor(b => b.Link, new { @class = "form-control" })
                @Html.ValidationMessageFor(b => b.Link, "", new { @class = "text-danger" })
            </div>

            <div class="form-group">
                <button type="submit" class="btn btn-primary">Добавить</button>
            </div>
        </div>

        <div class="col-6 col-md-4">
            <div class="form-group">
                @if (ViewBag.IsEditPage != null && ViewBag.IsEditPage == true)
                {
                    <img src="@Url.Content("~/Content/images/banners/" + Model.ImagePath)" class="img-thumbnail multi-image">
                }
                else
                {
                    <img class="img-thumbnail multi-image">
                }
                @Html.LabelFor(b => b.Image, "Изображение")
                @Html.TextBoxFor(b => b.Image, new { @type = "file", @class = "form-control multi" })
                @Html.ValidationMessageFor(b => b.Image, "", new { @class = "text-danger" })
            </div>
        </div>
    </div>
}