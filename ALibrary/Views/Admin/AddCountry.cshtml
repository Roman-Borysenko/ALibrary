@model ALibrary.Models.Country
@{
    Layout = "~/Views/Shared/_Layout.cshtml";

    string method = "AddCountry";
    if (ViewBag.IsEditPage != null && ViewBag.IsEditPage == true)
    {
        method = "UpdateCountry";
    }
}

<h2>Добавить страну</h2>

@using (Html.BeginForm(method, "Admin", FormMethod.Post))
{
    @Html.TextBoxFor(b => b.Id, new { @type = "hidden" })
    <div class="form-group">
        @Html.LabelFor(b => b.Name, "Название страны")
        @Html.TextBoxFor(b => b.Name, new { @class = "form-control" })
        @Html.ValidationMessageFor(b => b.Name, "", new { @class = "text-danger" })
    </div>

    <div class="form-group">
        <button type="submit" class="btn btn-primary">Отправить</button>
    </div>
}