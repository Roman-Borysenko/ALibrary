@using ALibrary.Models
@model LoginViewModel
@{
    ViewBag.Title = "Выполнить вход";
}

<!-- Main content -->
@using (Html.BeginForm("Login", "Account", new { ReturnUrl = ViewBag.ReturnUrl }, FormMethod.Post, new { @class = "auth_login", role = "form" }))
{
    @Html.AntiForgeryToken()
    <p class="login__title">sign in <br><span class="login-edition">welcome to A.Movie</span></p>

    <div class="social social--colored">
        <a href='#' class="social__variant fa fa-facebook"></a>
        <a href='#' class="social__variant fa fa-twitter"></a>
        <a href='#' class="social__variant fa fa-tumblr"></a>
    </div>

    <p class="login__tracker">or</p>

    <div class="field-wrap">
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })

        @Html.TextBoxFor(m => m.Email, new { placeholder = "Email", @class = "login__input" })
        @Html.ValidationMessageFor(m => m.Email, "", new { @class = "text-danger" })

        @Html.PasswordFor(m => m.Password, new { placeholder = "Пароль", @class = "login__input" })
        @Html.ValidationMessageFor(m => m.Password, "", new { @class = "text-danger" })

        @Html.CheckBoxFor(m => m.RememberMe, new { @class = "login__check styled" })
        @Html.LabelFor(m => m.RememberMe)
    </div>

    <div class="login__control">
        <button type='submit' class="btn btn-md btn--warning btn--wider">Войти</button>
        @Html.ActionLink("Регистрация нового пользователя", "Register", "Account", new { @class = "login__tracker form__tracker" })
    </div>
}