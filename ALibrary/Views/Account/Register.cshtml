@model ALibrary.Models.RegisterViewModel
@{
    ViewBag.Title = "Регистрация";
}

<!-- Main content -->
@using (Html.BeginForm("Register", "Account", FormMethod.Post, new { @class = "auth_login", role = "form" }))
{
    @Html.AntiForgeryToken()
    <p class="login__title">sign in <br><span class="login-edition">welcome to A.Movie</span></p>

    <div class="social social--colored">
        <a href='#' class="social__variant fa fa-facebook"></a>
        <a href='#' class="social__variant fa fa-twitter"></a>
        <a href='#' class="social__variant fa fa-tumblr"></a>
    </div>

    <p class="login__tracker">or</p>

    <div class="field-wrap">
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })

        @Html.TextBoxFor(m => m.Email, new { placeholder = "Email", @class = "login__input" })
        @Html.ValidationMessageFor(m => m.Email, "", new { @class = "text-danger" })

        @Html.PasswordFor(m => m.Password, new { placeholder = "Пароль", @class = "login__input" })
        @Html.ValidationMessageFor(m => m.Password, "", new { @class = "text-danger" })

        @Html.PasswordFor(m => m.ConfirmPassword, new { placeholder = "Подтверждение пароля", @class = "login__input" })
        @Html.ValidationMessageFor(m => m.ConfirmPassword, "", new { @class = "text-danger" })
    </div>

    <div class="login__control">
        <button type='submit' class="btn btn-md btn--warning btn--wider">Регистрация</button>
        @Html.ActionLink("Вход", "Login", "Account", new { @class = "login__tracker form__tracker" })
    </div>
}